<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="pos_order_mgmt.view_pos_config_form"/>
        <field name="arch" type="xml">
            <div id="pos_order_mgmt" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="iface_draft_order">
                    <div class="o_setting_left_pane">
                        <field name="iface_draft_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_draft_order"/>
                        <div class="text-muted">
                            Allow to save orders as draft and to retrieve them.
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
