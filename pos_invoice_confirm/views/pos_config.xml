<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_config_view_form_invoice" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoice_journal']" position="after">
                <div class="content-group mt16" attrs="{'invisible': [('module_account', '=', False)]}">
                    <div class="row mt16">
                        <label string="Show invoice order reminder" for="iface_invoice_order_reminder" class="col-lg-3 o_light_label"/>
                        <field name="iface_invoice_order_reminder" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
